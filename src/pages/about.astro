---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import AboutHero from "@/components/about/AboutHero.astro";
import AboutIntro from "@/components/about/AboutIntro.astro";
import AboutExperience from "@/components/about/AboutExperience.astro";
import AboutEducation from "@/components/about/AboutEducation.astro";
import AboutSkills from "@/components/about/AboutSkills.astro";
import AboutLanguages from "@/components/about/AboutLanguages.astro";

const seo: AstroSeoProps = {
	title: "About Me - Andres Vargas",
	description: "Full-Stack Developer & Security Specialist with 5+ years of experience creating robust, scalable web applications.",
	canonical: "https://mintaka.co/about/",
	openGraph: {
		url: "/about/",
		title: "About Me - Andres Vargas",
		description: "Full-Stack Developer & Security Specialist with 5+ years of experience creating robust, scalable web applications.",
		images: [
			{
				url: "https://mintaka.co/_astro/about-og.jpg",
				width: 1200,
				height: 630,
				alt: "Andres Vargas - Full-Stack Developer",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};

---

<BaseLayout seo={seo}>
	<AboutHero />
	<AboutIntro />
	<AboutExperience />
	<AboutEducation />
	<AboutSkills />
	<AboutLanguages />
</BaseLayout>