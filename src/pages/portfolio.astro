---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import PortfolioGallery from "@/components/portfolio/PortfolioGallery.astro";

const seo: AstroSeoProps = {
	title: "Portfolio - 3D Gallery - Andres Vargas",
	description: "Explore my portfolio through an interactive 3D gallery showcasing Full-Stack development projects, mobile applications, and enterprise solutions.",
	canonical: "https://mintaka.co/portfolio/",
	openGraph: {
		url: "/portfolio/",
		title: "Portfolio - 3D Gallery - Andres Vargas",
		description: "Explore my portfolio through an interactive 3D gallery showcasing Full-Stack development projects, mobile applications, and enterprise solutions.",
		images: [
			{
				url: "https://mintaka.co/_astro/portfolio-og.jpg",
				width: 1200,
				height: 630,
				alt: "Portfolio 3D Gallery - Andres Vargas",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<PortfolioGallery />
</BaseLayout>