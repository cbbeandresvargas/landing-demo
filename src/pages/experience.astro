---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import ExperienceHero from "@/components/experience/ExperienceHero.astro";
import ExperienceTimeline from "@/components/experience/ExperienceTimeline.astro";
import ExperienceSkills from "@/components/experience/ExperienceSkills.astro";

const seo: AstroSeoProps = {
	title: "Work Experience - Andres Vargas",
	description: "My professional journey in technology and leadership, showcasing key roles and achievements in Full-Stack development and IT management.",
	canonical: "https://mintaka.co/experience/",
	openGraph: {
		url: "/experience/",
		title: "Work Experience - Andres Vargas",
		description: "My professional journey in technology and leadership, showcasing key roles and achievements in Full-Stack development and IT management.",
		images: [
			{
				url: "https://mintaka.co/_astro/experience-og.jpg",
				width: 1200,
				height: 630,
				alt: "Andres Vargas - Work Experience",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<ExperienceHero />
	<ExperienceTimeline />
	<ExperienceSkills />
</BaseLayout>