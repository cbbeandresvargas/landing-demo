---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import ProjectsHero from "@/components/projects/ProjectsHero.astro";
import ProjectsGrid from "@/components/projects/ProjectsGrid.astro";
import ProjectsTechnologies from "@/components/projects/ProjectsTechnologies.astro";

const seo: AstroSeoProps = {
	title: "Projects - Andres Vargas Portfolio",
	description: "Explore my portfolio of Full-Stack development projects including web applications, mobile apps, and enterprise solutions.",
	canonical: "https://mintaka.co/projects/",
	openGraph: {
		url: "/projects/",
		title: "Projects - Andres Vargas Portfolio",
		description: "Explore my portfolio of Full-Stack development projects including web applications, mobile apps, and enterprise solutions.",
		images: [
			{
				url: "https://mintaka.co/_astro/project-template.su4WbnfU_78HXv.webp",
				width: 1200,
				height: 630,
				alt: "Projects Portfolio",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<ProjectsHero />
	<ProjectsGrid />
	<ProjectsTechnologies />
</BaseLayout>