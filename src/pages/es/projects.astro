---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import ProjectsHero from "@/components/projects/ProjectsHero.astro";
import ProjectsGrid from "@/components/projects/ProjectsGrid.astro";
import ProjectsTechnologies from "@/components/projects/ProjectsTechnologies.astro";

const seo: AstroSeoProps = {
	title: "Proyectos - Portfolio de Andres Vargas",
	description: "Explora mi portfolio de proyectos de desarrollo Full-Stack incluyendo aplicaciones web, móviles y soluciones empresariales.",
	canonical: "https://mintaka.co/es/projects/",
	openGraph: {
		url: "/es/projects/",
		title: "Proyectos - Portfolio de Andres Vargas",
		description: "Explora mi portfolio de proyectos de desarrollo Full-Stack incluyendo aplicaciones web, móviles y soluciones empresariales.",
		images: [
			{
				url: "https://mintaka.co/_astro/project-template.su4WbnfU_78HXv.webp",
				width: 1200,
				height: 630,
				alt: "Portfolio de Proyectos",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<ProjectsHero />
	<ProjectsGrid />
	<ProjectsTechnologies />
</BaseLayout>