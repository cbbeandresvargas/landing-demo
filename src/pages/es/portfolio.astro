---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import PortfolioGallery from "@/components/portfolio/PortfolioGallery.astro";

const seo: AstroSeoProps = {
	title: "Portafolio - Galería 3D - Andres Vargas",
	description: "Explora mi portafolio a través de una galería 3D interactiva mostrando proyectos de desarrollo Full-Stack, aplicaciones móviles y soluciones empresariales.",
	canonical: "https://mintaka.co/es/portfolio/",
	openGraph: {
		url: "/es/portfolio/",
		title: "Portafolio - Galería 3D - Andres Vargas",
		description: "Explora mi portafolio a través de una galería 3D interactiva mostrando proyectos de desarrollo Full-Stack, aplicaciones móviles y soluciones empresariales.",
