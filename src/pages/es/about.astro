---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import AboutHero from "@/components/about/AboutHero.astro";
import AboutIntro from "@/components/about/AboutIntro.astro";
import AboutExperience from "@/components/about/AboutExperience.astro";
import AboutEducation from "@/components/about/AboutEducation.astro";
import AboutSkills from "@/components/about/AboutSkills.astro";
import AboutLanguages from "@/components/about/AboutLanguages.astro";

const seo: AstroSeoProps = {
	title: "Sobre Mí - Andres Vargas",
	description: "Desarrollador Full-Stack y Especialista en Seguridad con más de 5 años de experiencia creando aplicaciones web robustas y escalables.",
	canonical: "https://mintaka.co/es/about/",
	openGraph: {
		url: "/es/about/",
		title: "Sobre Mí - Andres Vargas",
		description: "Desarrollador Full-Stack y Especialista en Seguridad con más de 5 años de experiencia creando aplicaciones web robustas y escalables.",
		images: [
			{
				url: "https://mintaka.co/_astro/about-og.jpg",
				width: 1200,
				height: 630,
				alt: "Andres Vargas - Desarrollador Full-Stack",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};

---

<BaseLayout seo={seo}>
	<AboutHero />
	<AboutIntro />
	<AboutExperience />
	<AboutEducation />
	<AboutSkills />
	<AboutLanguages />
</BaseLayout>