---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import ExperienceHero from "@/components/experience/ExperienceHero.astro";
import ExperienceTimeline from "@/components/experience/ExperienceTimeline.astro";
import ExperienceSkills from "@/components/experience/ExperienceSkills.astro";

const seo: AstroSeoProps = {
	title: "Experiencia Laboral - Andres Vargas",
	description: "Mi trayectoria profesional en tecnología y liderazgo, mostrando roles clave y logros en desarrollo Full-Stack y gestión de TI.",
	canonical: "https://mintaka.co/es/experience/",
	openGraph: {
		url: "/es/experience/",
		title: "Experiencia Laboral - Andres Vargas",
		description: "Mi trayectoria profesional en tecnología y liderazgo, mostrando roles clave y logros en desarrollo Full-Stack y gestión de TI.",
		images: [
			{
				url: "https://mintaka.co/_astro/experience-og.jpg",
				width: 1200,
				height: 630,
				alt: "Andres Vargas - Experiencia Laboral",
				type: "image/jpeg",
			},
		],
		site_name: "Majestico",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<ExperienceHero />
	<ExperienceTimeline />
	<ExperienceSkills />
</BaseLayout>