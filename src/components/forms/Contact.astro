---
import Title from "@components/global/Title.astro";

import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section class="isolate px-6 py-24 sm:py-32 lg:px-8">
	<div class="absolute inset-x-0 top-[-10rem] transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]" aria-hidden="true">
		<div class="gradient-element"></div>
	</div>
	<div class="mx-auto">
		<Title class="pb-10 pt-20 uppercase" title={t("contact.title")} subtitle={t("contact.subtitle")} />
		<div class="mx-auto max-w-2xl pt-12 lg:pt-20">
			<div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
				<div class="form-field sm:col-span-2">
					<label class="form-label">{lang === 'es' ? 'Correo Electrónico' : 'Email'}</label>
					<div class="contact-info">
						<a href="mailto:andresvm10@gmail.com" class="contact-link">andresvm10@gmail.com</a>
					</div>
				</div>
				<div class="form-field sm:col-span-2">
					<label class="form-label">{lang === 'es' ? 'Teléfono' : 'Phone'}</label>
					<div class="contact-info">
						<a href="tel:+59100000000" class="contact-link">+591 000 00000</a>
					</div>
				</div>
				<div class="form-field sm:col-span-2">
					<label class="form-label">{lang === 'es' ? 'Ubicación' : 'Location'}</label>
					<div class="contact-info">
						<span class="contact-text">Cochabamba, Bolivia</span>
						<span class="contact-subtext">{lang === 'es' ? 'Zona horaria: GMT-4' : 'Time zone: GMT-4'}</span>
					</div>
				</div>
				<div class="form-field sm:col-span-2">
					<label class="form-label">{lang === 'es' ? 'Enlaces' : 'Links'}</label>
					<div class="contact-info">
						<div class="contact-links">
							<a href="https://github.com/cbbeandresvargas" target="_blank" class="contact-link">GitHub</a>
							<a href="https://www.linkedin.com/in/andres-vargas-martins/" target="_blank" class="contact-link">LinkedIn</a>
							<a href="https://twitter.com/andresvargas" target="_blank" class="contact-link">Twitter / X</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.gradient-element {
		@apply relative left-1/2 -z-10 aspect-[1155/678] w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem];
		clip-path: polygon(
			74.1% 44.1%,
			100% 61.6%,
			97.5% 26.9%,
			85.5% 0.1%,
			80.7% 2%,
			72.5% 32.5%,
			60.2% 62.4%,
			52.4% 68.1%,
			47.5% 58.3%,
			45.2% 34.5%,
			27.5% 76.7%,
			0.1% 64.9%,
			17.9% 100%,
			27.6% 76.8%,
			76.1% 97.7%,
			74.1% 44.1%
		);
	}

	.form-field {
		@apply block;
	}

	.form-label {
		@apply flex pl-1 text-sm font-semibold leading-6 text-gray-900;
	}

	input,
	textarea {
		@apply pointer-events-auto relative m-0 w-full cursor-text rounded-lg border-0 bg-slate-200 px-5 py-2 text-xl font-normal not-italic outline-none placeholder:text-gray-400 focus:ring-slate-500;
	}

	.contact-info {
		@apply relative m-0 w-full rounded-lg border-0 bg-slate-200 px-5 py-2 text-xl font-normal not-italic;
	}

	.contact-link {
		@apply text-blue-600 hover:text-blue-800 transition-colors;
	}

	.contact-text {
		@apply text-gray-900;
	}

	.contact-subtext {
		@apply text-sm text-gray-500 block mt-1;
	}

	.contact-links {
		@apply flex flex-col space-y-2;
	}
</style>
